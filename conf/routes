# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Application.index
GET     /entry/{projectId}                      Application.entry
GET     /paper/{paperId}                        Application.paper
GET     /renderImageset/{imagesetId}            PaperController.render
GET     /ajax/paper                             PaperController.getPapers
POST    /ajax/paper                             PaperController.createPaper
GET     /ajax/paper/{paperId}                   PaperController.getPaper
GET		/ajax/imageset/{imagesetId}				PaperController.getImageSet
GET     /project                                ProjectController.getProjects
PUT     /project                                ProjectController.newProjects
GET     /project/{projectId}                    ProjectController.getProject

GET		/project/{projectId}/templates			TemplateController.getTemplates
GET		/project/{projectId}/users				ProjectController.getUserPermissions
GET		/project/{projectId}/access				ProjectController.getAccess

*		/data/{<.*>path}						ImageBrowser.resolveFile

*		/view									ImageViewer.index
*		/view/{<.*>path}						ImageViewer.index


# Import CRUD routes
*      	/admin									module:crud

# Import Secure routes
*      /  						                module:secure


# Map static resources from the /app/public folder to the /public path
GET		/public/javascripts/lib/ 	  			staticDir:public
GET		/public/javascripts/{<.*>path} 			Application.loadJavascript
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
