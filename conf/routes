# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Application.index
GET     /users   	                            Application.showUsers
GET     /project                                ProjectController.getProjects
PUT     /project                                ProjectController.newProjects
*       /project/create/{name}                  Application.createProject
*       /project/delete/{projectId}             Application.deleteProject
GET     /project/{projectId}                    ProjectManager.index

GET		/template/?								TemplateManager.index
GET		/project/{projectId}/templates			TemplateController.getTemplates
GET		/project/{projectId}/users				ProjectController.getUserPermissions
GET		/project/{projectId}/permissions		ProjectController.getPermissionsForProject
GET		/template/{projectId}/{templateId}		TemplateManager.showTemplate

GET		/browser								ImageBrowser.index
GET		/browser/{projectId}					ImageBrowser.projectIndex
*		/data/{<.*>path}						ImageBrowser.resolveFile

*		/view									ImageViewer.index
*		/view/{<.*>path}						ImageViewer.index


# Import CRUD routes
*      	/admin									module:crud

# Import Secure routes
*      /  						                module:secure


# Map static resources from the /app/public folder to the /public path
GET		/public/javascripts/lib/ 	  			staticDir:public
GET		/public/javascripts/{<.*>path} 			Application.loadJavascript
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
