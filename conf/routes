# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                                       Application.index
GET     /users   	                            Application.showUsers
GET     /project                                Application.listProjects
*       /project/create/{name}                  Application.createProject
*       /project/delete/{projectId}             Application.deleteProject
GET     /project/{projectId}                    Application.showProject

GET		/template/?								TemplateManager.index
GET		/template/{projectId}					TemplateManager.listTemplates
GET		/template/{projectId}/{templateId}		TemplateManager.showTemplate

GET		/browser								ImageBrowser.index
GET		/browser/{projectId}					ImageBrowser.projectIndex
*		/data/{<.*>path}						ImageBrowser.resolveFile


# Import CRUD routes
*      	/admin									module:crud

# Import Secure routes
*      /  						                module:secure


# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
